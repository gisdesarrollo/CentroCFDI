@model IEnumerable<API.Operaciones.ComplementoCartaPorte.Cat_Mercancias>

@{
    ViewBag.Title = "Mercancias";
}

<div class="card card-flush">

    <div class="card-header card-title d-flex align-items-center position-relative my-1">
        <h2>Crea y modifica las Mercancias  de la empresa</h2>

    </div>

    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <i class="fa fa-magnifying-glass position-absolute ms-4"></i>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Buscar" />
            </div>
            <!--end::Search-->
            <!--begin::Export buttons-->
            <div id="kt_datatable_example_1_export" class="d-none"></div>
            <!--end::Export buttons-->
        </div>
        <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
            <!--begin::Export dropdown-->
            <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                <i class="fa fa-file-export"></i>
                Exportar
            </button>
            <!--begin::Menu-->
            <div id="kt_datatable_example_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="copy">
                        Copiar a portapapeles
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="excel">
                        Exportar a Excel
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="csv">
                        Exportar a CSV
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="pdf">
                        Exportar a PDF
                    </a>
                </div>
                <!--end::Menu item-->
            </div>
            <!--end::Menu-->
            <!--end::Export dropdown-->
            <!--begin::Hide default export buttons-->
            <div id="kt_datatable_example_buttons" class="d-none"></div>
            <!--end::Hide default export buttons-->
        </div>
    </div>
    <div class="card-body pt-0">

        <table class="table align-middle rounded table-row-dashed fs-6 g-5" id="kt_datatable">

            <thead>
                <!--begin::Table row-->
                <tr class="text-start text-gray-600 fw-bold fs-7 text-uppercase">
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.ClaveProdServCP)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.ClavesUnidad)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Unidad)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Dimensiones)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.PesoEnKg)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.ValorMercancia)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Moneda)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.ClaveMaterialPeligroso)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.DescripEmbalaje)
                    </th>
                    <td>
                        @Html.DisplayNameFor(model => model.TipoEmbalaje_Id)
                    </td>
                    <th class="min-w-100px">

                    </th>

                </tr>
                <!--end::Table row-->
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd">
                        <td>
                            @Html.DisplayFor(modelItem => item.ClaveProdServCP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClavesUnidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dimensiones)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PesoEnKg)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValorMercancia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Moneda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClaveMaterialPeligroso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescripEmbalaje)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoEmbalaje_Id)
                        </td>


                        <td class="text-end">
                            <!--begin::Action=-->
                            @if (User.IsInRole("EDICION") || User.IsInRole("BORRADO"))
                            {
                                <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                    Acciones <i class="fa-solid fa-chevron-down"></i>
                                </a>
                            }
                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
                                <!--begin::Menu item-->
                                @if (User.IsInRole("EDICION"))
                                {
                                    <div class="menu-item px-3">
                                        @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "menu-link px-3" })
                                    </div>
                                }
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                @if (User.IsInRole("BORRADO"))
                                {
                                    <div class="menu-item px-3">
                                        @Html.ActionLink("Eliminar", "EliminarMercancia", new { id = item.Id }, new { onclick = "return confirm('¿Estás seguro de elminar el registro?');", @class = "menu-link px-3" })
                                    </div>
                                }
                                <!--end::Menu item-->

                            </div>
                            <!--end::Menu-->
                            <!--end::Action=-->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="hiddenDiv">
<div class="d-flex align-items-center py-3 py-md-1" id="tools">
    <!--begin::Button-->
    <a href="@Url.Action("Create","Mercancias")" class="btn btn-secondary">
        Nuevo
    </a>
    <!--end::Button-->
</div>
</div>