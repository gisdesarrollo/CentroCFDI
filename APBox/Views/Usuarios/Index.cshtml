@model IEnumerable<API.Catalogos.Usuario>

<div class="card card-flush">
    <div class="card-header align-items-center py-5 gap-2 gap-md-5">
        <div class="card-title">
            <!--begin::Search-->
            <div class="d-flex align-items-center position-relative my-1">
                <i class="fa fa-magnifying-glass position-absolute ms-4"></i>
                <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Buscar" />
            </div>
            <!--end::Search-->
            <!--begin::Export buttons-->
            <div id="kt_datatable_example_1_export" class="d-none"></div>
            <!--end::Export buttons-->
        </div>
        <div class="card-toolbar flex-row-fluid justify-content-end gap-5">
            <!--begin::Export dropdown-->
            <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                <i class="fa fa-file-export"></i>
                Exportar
            </button>
            <!--begin::Menu-->
            <div id="kt_datatable_example_export_menu" class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4" data-kt-menu="true">
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="copy">
                        Copiar a portapapeles
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="excel">
                        Exportar a Excel
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="csv">
                        Exportar a CSV
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" data-kt-export="pdf">
                        Exportar a PDF
                    </a>
                </div>
                <!--end::Menu item-->
            </div>
            <!--end::Menu-->
            <!--end::Export dropdown-->
            <!--begin::Hide default export buttons-->
            <div id="kt_datatable_example_buttons" class="d-none"></div>
            <!--end::Hide default export buttons-->
        </div>
    </div>
    <div class="card-body pt-0">

        <table class="table align-middle rounded table-row-dashed fs-6 g-5" id="kt_datatable">

            <thead>
                <!--begin::Table row-->
                <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase">
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.NombreCompleto)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.NombreUsuario)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Perfil.Nombre)
                    </th>
                    <th class="min-w-100px">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="min-w-100px text-end">

                    </th>
                </tr>
                <!--end::Table row-->
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="odd">
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.NombreUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Perfil.Nombre)
                        </td>
                        <td>
                            @switch (item.Status)
                            {
                                case API.Enums.Status.Activo:
                                    <div class="badge badge-light-success">Activo</div>
                                    break;
                                case API.Enums.Status.Cancelado:
                                    <div class="badge badge-light-danger">Cancelado</div>
                                    break;
                                default:
                                    break;
                            }
                        </td>

                        <td class="text-end">
                            <!--begin::Action=-->
                            <a href="#" class="btn btn-sm btn-light btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                Acciones <i class="fa-solid fa-chevron-down"></i>
                            </a>
                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4 " data-kt-menu="true" >
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "menu-link px-3" })
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { onclick = "return confirm('¿Estás seguro de elminar el registro?');", @class = "menu-link px-3" })
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    @Html.ActionLink("Reset Pwd", "Reseteo", new { id = item.Id }, new { @class = "menu-link px-3" })
                                </div>
                                <!--end::Menu item-->
                            </div>
                            <!--end::Menu-->
                            <!--end::Action=-->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var sistema = document.getElementById("sistema");
    sistema.classList.add('here');
</script>