@{
    ViewBag.Title = "Cargar Documentos Externos";
}

@if (User.IsInRole("CARGACFDI"))//SE LE APLICO PERMISO DEPENDIENDO A LOS TIPOS DE ROLES QUE TIENE ASIGNADO CADA USUARIO
{
    <div class="card card-flush py-4">
        <!--begin::Card body-->
        <div class="card-body">
            <h2 class="card-title">Cargar CFDi Externos</h2>
            <p class="card-text">Si te falta algun CFDi Emitido en el proceso configurado, carga aqui los CFDi que no estan en el sistema.</p>
        </div>
        <!--end::Card body-->
        <!--begin::Card body-->

        <div class="card-body pt-0">

            @using (Html.BeginForm("CargarDocumentosExternos", "ComplementosPagos", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="form-group col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            <label class="text-gray-600 mt-1 fw-semibold fs-6" for="Grupos">Seleccionar solo XML</label><br />
                            <input type="file" name="FileUpload" id="file" class="btn btn-outline btn-outline-dashed btn-outline-primary btn-active-light-primary" accept=".xml" multiple />
                        </div>
                    </div>

                    <div class="clearfix"></div>
                    <div class="separator my-5"></div>
                    <div class="d-flex justify-content-end">
                        <!--begin::Button-->
                        <button type="submit" class="btn btn-primary">
                            <span class="indicator-label">Cargar</span>
                        </button>
                        <!--end::Button-->
                    </div>
                </div>
            }
        </div>
    </div>
}
